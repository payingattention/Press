<h1>Temporary Post Editor</h1>

<p>This file will allow me to add/edit posts for testing purposes.</p>
<p>This will eventually go into the admin area.</p>

<%= link_to "Go Back", {:action => 'index'}, :class => 'btn' %>

<%= form_for :post, :url => {:action => 'update', :id => @post.id} do |f| %>

    <div class='container'>
      <div class='row'>
        <div class='span1'><label>User</label></div>
        <div class='span8'><%= f.select :user_id, @all_users %></div>
      </div>
      <div class='row'>
        <div class='span1'><label>Title</label></div>
        <div class='span8'><%= f.text_field :title, :class => 'test' %></div>
      </div>
      <div class='row'>
        <div class='span1'><label>Content</label></div>
        <div class='span8'><%= f.text_area :content %></div>
      </div>
      <div class='row'>
        <div class='span1'><label> </label></div>
        <div class='span8'><%= submit_tag "Update Post" %></div>
      </div>
    </div>

<% end %>

