<!DOCTYPE html>
<html>
<head>
  <title><%= Setting.getValue(:title) %> | Site Administration</title>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <!-- BEGIN: Markitup text editor -->
  <script type="text/javascript">
    $(document).ready(function() {
      $(".markitup").markItUp(myMarkdownSettings);
      $(".markItUpContainer").each(function(i,e) {
        $(e).children('textarea').each(function(index,obj) {
          $(obj).css('width', $(e).width() - 63);
          $(obj).css('max-width', $(e).width() - 63);
        })
      });
      AnyTime.picker('anytime', { format: "%M %d, %z @ %h:%i%p" });
    });
  </script>
  <!-- END: Markitup text editor -->
  <%= csrf_meta_tags %>
  <meta name='viewport' content='width=device-width, initial-scale=1.0'>
</head>
<body role='admin'>

<div class='container' role="header">
  <div class='row'>
    <div class='span8'>
      <span class='header-title'>
        <%= Setting.getValue(:header_title).html_safe %>
      </span>
    </div>
    <div class='span4'>

      <%= form_tag '', { :method => 'get', :class => 'site-search pull-right form-horizontal accordion-form' } do %>
        <fieldset>
          <div class="control-group">
            <div class="controls">
              <div class="input-prepend input-append">
                <span class="add-on"><i class="icon-search"></i></span>
                <%= text_field_tag('query', @query, { :class => 'search-query left-align', :placeholder => 'Search Filter...' })  %>
                <span class="add-on"><a href="<%= url_for :query_string => nil %>"><i class="icon-remove-sign"></i></a></span>
              </div>
            </div>
          </div>
        </fieldset>
      <% end %>

    </div>
  </div>
  <div class='row'>
    <div class='pull-right user-panel'>
      <%= (user_signed_in?) ? @user.panel : "Login" %>
    </div>
  </div>

  <div class='navbar'>
    <div class='navbar-inner main'>
      <div class='container'>
        <ul class='nav'>
          <li><a href="<%= url_for root_path %>"><i class="icon-home"></i></a></li>
          <li class='divider-arrow'></li>
          <li class='dropdown'><a href="#" class='dropdown-toggle' data-toggle='dropdown'>Content <b class='caret'></b></a>
            <ul class='dropdown-menu'>
              <li><%= link_to "Posts", admin_content_index_path(:posts) %></li>
              <li><%= link_to "Pages", admin_content_index_path(:pages) %></li>
              <li><%= link_to "Messages", admin_content_index_path(:messages) %></li>
              <li><%= link_to "Comments", admin_content_index_path(:comments) %></li>
              <li class='divider'></li>
              <li><%= link_to "Ads", admin_content_index_path(:ads) %></li>
              <li><%= link_to "Blocks", admin_content_index_path(:blocks) %></li>
            </ul>
          </li>

          <li><%= link_to "Users", admin_users_path %></li>
          <li><%= link_to "Tags/Categories", admin_taxonomies_path %></li>

          <!--li class='dropdown'><a href="#" class='dropdown-toggle' data-toggle='dropdown'>Tools <b class="caret"></b></a>
          <ul class='dropdown-menu'>
            <li><%= link_to admin_tools_software_update_index_path do %><i class='icon-cog'></i> Software Update<% end %></li>
          </ul>
        </li-->

          <li><%= link_to "Settings", admin_settings_path %></li>
        </ul>


      </div>
    </div>
  </div>

</div>


<div class='container' role="main">

  <!-- @TODO This should be a view helper -->
  <% if @breadcrumbs.present? || @filter.present? %>
    <div class='container'>
      <div class='row'>
        <div class='span12'>
          <ul class='breadcrumb'>
            <% if @breadcrumbs.present? %>
              <% active = @breadcrumbs.pop %>
              <% @breadcrumbs.each do |b| %>
                <li><%= b %> <span class='divider'>/</span></li>
              <% end %>
              <li class='active'><%= active %></li>
            <% end %>
            <% if @category.present? %>
              <li>:: Categorized by "<%= @category.capitalize %>" <a href="<%= url_for :filter => @filter, :page => @pagination_current_page %>"><i class="icon-remove-sign"></i></a></li>
            <% end %>
            <% if @tag.present? %>
              <li>:: Tagged as "<%= @tag.capitalize %>" <a href="<%= url_for :filter => @filter, :page => @pagination_current_page %>"><i class="icon-remove-sign"></i></a></li>
            <% end %>
            <% if @filter.present? %>
              <li>:: Filtered by "<span class="highlight"><%= @filter %></span>" <a href="<%= url_for :category => @category, :tag => @tag, :page => @pagination_current_page %>"><i class="icon-remove-sign"></i></a></li>
            <% end %>
            
          </ul>
        </div>
      </div>
    </div>
  <% end %>


  <!-- @TODO This should be a view helper -->
  <div class='row'>
    <div class='span12'>
      <% if flash[:success] || flash[:notice] %>
          <div class='alert alert-success'>
            <a class="close" data-dismiss='alert'>&times;</a>
            <strong>Success!</strong> <%= flash[:success] %> <%= flash[:notice] %>
          </div>
      <% end %>

      <% if flash[:error] %>
          <div class='alert alert-error'>
            <a class="close" data-dismiss='alert'>&times;</a>
            <strong>Error!</strong> <%= flash[:error] %>
          </div>
      <% end %>

      <% if flash[:info] %>
          <div class='alert alert-info'>
            <a class="close" data-dismiss='alert'>&times;</a>
            <strong>Information!</strong> <%= flash[:info] %>
          </div>
      <% end %>

      <% if flash[:warning] %>
          <div class='alert'>
            <a class="close" data-dismiss='alert'>&times;</a>
            <strong>Warning!</strong> <%= flash[:warning] %>
          </div>
      <% end %>
    </div>
  </div>

  <%= yield %>

</div>

<div class='navbar navbar-fixed-bottom bottombar'>
  <div class='navbar-inner bottombar-inner'>
    <div class='container'>

      <%= link_to "RubyPress Administration", admin_index_path, :class => "brand" %>

    </div>
  </div>
</div>


</body>
</html>
