
<fieldset>
  <div class='span12'>
    <legend><%= form_legend %></legend>
  </div>

  <div class='span9'>
    <div class=''><%= f.text_area :content, :size => '50x8', :class => 'input-xlarge markitup' %></div>

    <div class='form-actions'>
      <%= submit_tag submit_label, :class => 'btn btn-primary' %>
      <%= link_to "Cancel", admin_content_index_path(:pages), :class => 'btn' %>
    </div>
  </div>

  <div class='span3'>

    <h6>SEO Url</h6>
    <div class='control-group<%= " error" if @page.errors.has_key?(:seo_url) %>'>
      <div class='controls'><%= f.text_field :seo_url, :class => 'span3', :placeholder => "SEO Url" %></div>
      <% if @page.errors.has_key?(:seo_url) %>
        <span class='help-inline'><%= @page.errors.get(:seo_url).first %></span>
      <% end %>
    </div>

    <hr />
    <h6>Publication Options</h6>
    <div class='control-group'>
      <div class='control'>
        <%= select_tag('page[state]', options_for_select([
          ['Draft', :draft],
          ['Published', :published],
          ['Frozen', :frozen]
        ], @page.state), :class => 'span3') %>
      </div>
    </div>
    <div class='control-group'>
      <label class='checkbox'>
        <%= f.check_box :is_sticky %>
        Is Sticky?
      </label>
    </div>
    <div class='control-group'>
      <label class='checkbox'>
        <%= f.check_box :allow_comments %>
        Allow Comments?
      </label>
    </div>
    <div class='control-group'>
      <div class='controls'>
        <%= f.text_field :go_live, :class => 'span3', :id => 'anytime', :placeholder => @page.go_live.strftime("%B %e, %Y @ %I:%M%p"), :value => @page.go_live.strftime("%B %e, %Y @ %I:%M%p") %>
      </div>
    </div>

    <hr />
    <h6>Categories</h6>
    <div class='control-group'>
      <% @categories.each do |category| %>
        <label class='checkbox'><%= check_box_tag "taxonomies[]", "#{category.id}", @post.has_taxonomy?(category.id) %><%= category.name %></label>
      <% end %>
    </div>

  </div>

</fieldset>
