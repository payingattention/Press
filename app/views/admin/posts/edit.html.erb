<%= form_for @content, :url => admin_post_path(@content), :html => { :class => '' } do |f| %>

  <%= breadcrumbs :controller => { :name => 'Content', :link => admin_content_index_path(:posts) }, :right_items => [
          submit_tag("Update Post", :class => 'btn btn-primary btn-mini'),
          link_to("Cancel", admin_content_index_path(:posts), :class => 'btn btn-mini')
  ]%>

  <div class='row'>
    <%= render :partial => 'post_form', :locals => { :f => f } %>
  </div>

<% end %>

<%= render :partial => 'admin/taxonomies/category_modal', :locals => { :category => Taxonomy.new } %>
