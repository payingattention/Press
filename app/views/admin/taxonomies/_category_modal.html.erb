
<div id='category-modal' class='modal hide fade in'>
  <%= form_for category, :url => admin_taxonomies_path(category), :remote => true, :html => { :'data-type' => 'json', :class => 'form-horizontal', :id => 'category_modal' } do |f| %>
    <%= hidden_field_tag "taxonomy[classification]", :category %>
    <div class='modal-header'>
      <a class="close" data-dismiss='modal'>&times;</a>
      <h3>New Category</h3>
    </div>
    <div class='modal-body'>
      <fieldset>

        <div class='control-group'>
          <label class='control-label'>Name</label>
          <div class='controls'>
            <%= f.text_field :name, :class => 'input-xlarge' %>
            <span class='help-inline'></span>
          </div>
        </div>

        <div class='control-group'>
          <label class='control-label'>SEO Url</label>
          <div class='controls'>
            <%= f.text_field :seo_url, :class => 'input-xlarge' %>
            <span class='help-inline'></span>
          </div>
        </div>

        <div class='control-group'>
          <label class='control-label'>Description</label>
          <div class='controls'>
            <%= f.text_area :description, :size => '50x8', :class => 'input-xlarge' %>
            <span class='help-inline'></span>
          </div>
        </div>

      </fieldset>
    </div>
    <div class='modal-footer'>
      <a href="#" class='btn btn-primary submit' data-partial-url='<%= categories_admin_content_index_path((@content.id || 0)) %>'>Submit</a>
      <a href="#" class='btn' data-dismiss='modal'>Close</a>
    </div>
  <% end %>
</div>