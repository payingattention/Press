<%= breadcrumbs :right_items => [
        link_to(new_admin_user_path, :class => 'btn btn-primary btn-mini') {
          "<i class='icon-plus icon-white'></i> Add New User".html_safe
        }
]%>

<div class='row'>
  <div class='span12'>

    <table class='table table-striped'>
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Type</th>
        <th class='span2 center'>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.display_name, admin_user_path(user) %></td>
            <td><%= user.email %></td>
            <td><%= user.role.to_s.capitalize %></td>
            <td class='span2 center'>
              <%= link_to 'Edit', edit_admin_user_path(user), :class => 'btn btn-mini' %>
              <%= link_to 'Destroy', admin_user_path(user), :method => :delete, :confirm => "You've chosen to delete this user, this can't be undone. Are you sure?", :class => 'btn btn-mini btn-danger' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <div class="btn-toolbar">

      <%= pagination %>

    </div>

  </div>
</div>
