<%= breadcrumbs %>

<div class='row'>
  <div class='span12'>

    <% if @localVersion != @remoteVersion %>

      <div class='alert alert-info'>
        <p>It appears there is an update! </p>
        <p>Local version: <%= @localVersion %></p>
        <p>Latest version: <strong><%= @remoteVersion %></strong></p>
      </div>

      <%= link_to upgrade_admin_tools_software_update_index_path %>



    <% else %>

      <div class='alert alert-success'>
        <p><strong>It appears everything is up to date!</strong></p>
        <p>Local & Latest version: <strong><%= @localVersion %></strong></p>
      </div>

    <% end %>

  </div>
</div>